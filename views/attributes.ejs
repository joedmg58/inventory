<%- include('./partials/head', {title: 'KA Demo Inventory - Attributes'}); %>
    
    <div class="container-fluid p-0 h-100">

        <%- include('./partials/side-bar', {active: 'attributes'}); %>

        <div class="main">

            <%- include('./partials/top-bar'); %>

            <div class="p-3 d-flex flex-wrap" style="gap: 20px;">

                <%- include('./partials/toasts'); %>

                <div class="attributes card shadow">
                    
                    <div class="card-header d-flex justify-content-between">
                        
                        <h3>Attributes</h3>

                        <div class="d-flex justify-content-between align-items-center">
                            
                            <div data-bs-toggle="tooltip" data-bs-placement="left" data-bs-title="Refresh">
                                <button class="btn btn-light rounded-circle shadow-sm" onclick="refreshAttributes()"><i class="fs-5 bi bi-arrow-clockwise"></i></button>
                            </div>

                            <div class="ms-3" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-title="Add new attribute">
                                <button id="btn-add-attr" class="btn btn-light rounded-circle shadow-sm" onclick="addAttribute()"><i class="fs-5 bi bi-plus-circle"></i></button>
                            </div>

                        </div>

                    </div>

                    <form class="card-body" id="form-attributes"  method="post" onsubmit="event.preventDefault()">

                        <table id="table-attributes">
                            <thead>
                                <tr>
                                    <td>Index</td>
                                    <td>Attribute name</td>
                                    <td>Actions</td>
                                </tr>
                            </thead>

                            <tbody>
                                <% if(data) { data.forEach( (attribute, index) => { %>

                                    <tr  data-attr-index="<%=index+1%>"  data-attr-id="<%=attribute.id%>" data-attr-name="<%=attribute.name%>" >
                                        <td><%= index + 1 %></td>
                                        <td><%= attribute.name %></td>
                                        <td class="fs-5">
                                            <i class="actions text-primary bi bi-pencil-square" onclick="editAttribute(this)"></i>
                                            <i class="actions text-danger ms-2 bi bi-trash" onclick="deleteAttribute(event, this)"></i>
                                        </td>
                                    </tr>
    
                                    <%}) } else { %>
                                        <tr><td colspan="3">NO DATA</td></tr>
                                    <%}%>
                            </tbody>
                        </table>

                    </form>

                </div>

                <div class="attributes card shadow">

                    <div class="card-header d-flex justify-content-between">
                        
                        <h3 id="attribute-selected">Values of atribute: [no attribute selected]</h3>

                        <div class="d-flex justify-content-between align-items-center">
                            
                            <div data-bs-toggle="tooltip" data-bs-placement="left" data-bs-title="Refresh">
                                <button class="btn btn-light rounded-circle shadow-sm" onclick="refreshAttrValues()"><i class="fs-5 bi bi-arrow-clockwise"></i></button>
                            </div>

                            <div class="ms-3" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-title="Add new attribute value">
                                <button class="btn btn-light rounded-circle shadow-sm" onclick=""><i class="fs-5 bi bi-plus-circle"></i></button>
                            </div>

                        </div>

                    </div>

                    <div class="card-body">

                        <table id="table-attributes-values">
                            <thead>
                                <tr>
                                    <td>Index</td>
                                    <td>Attribute value</td>
                                    <td>Actions</td>
                                </tr>
                            </thead>

                            <tbody>
                            
                            </tbody>
                        </table>

                    </div>


                </div>

            </div>

        </div>

    </div>

<%- include('./partials/foot'); %>