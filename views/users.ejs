<%- include('./partials/head', {title: 'KA Demo Inventory - Users'}); %>
    
    <div class="container-fluid p-0 h-100">

        <%- include('./partials/side-bar', {active: 'users'}); %>

        <div class="main">

            <%- include('./partials/top-bar'); %>

            <div class="p-3">

                <div class="users shadow">

                    <h3>Users</h3>

                    <table>

                        <thead>
                            <tr>
                                <td>Index</td>
                                <td>Name</td>
                                <td>Email</td>
                                <td>Actions</td>
                            </tr>
                        </thead>

                        <tbody>

                            <% if(data) { data.forEach( (user, index) => { %>

                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td class="fs-5">
                                    <i class="actions text-primary bi bi-pencil-square" onclick="editUser('<%=user.id%>')"></i>
                                    <i class="actions text-danger ms-2 bi bi-trash" onclick="deleteUser('<%=user.id%>')"></i>
                                </td>
                            </tr>

                            <%}) } else { %>
                                <tr><td colspan="4">NO DATA</td></tr>
                            <%}%>
                           
                        </tbody>

                    </table>

                </div>

            </div>

        </div>

    </div>

<%- include('./partials/foot'); %>